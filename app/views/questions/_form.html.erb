<h1><%=question_header(@question)%> </h1>


<%= form_with model: [@test, @question], local: true do |form|%>
 
 <%= render 'shared/errors', resource: @question%>
  
  <p>
    <%= form.label :body%><br>
    <%= form.text_field :body, id: :question_body%>
  </p><br>
  <p><%= form.submit %></p>
  <p><%= link_to 'Back', test_questions_path(@question.test_id) %></p>

<%end %>
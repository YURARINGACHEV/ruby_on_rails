<h1>Edit <%= @question.body%> question</h1>

 <p><%= link_to 'Back', test_questions_path(@question) %></p>

<%= form_with model:  @question, local: true do |form|%>

  <%= render 'shared/errors', resource: @question%>
  
  <p>
    <%= form.label :body%><br>
    <%= form.text_field :body, id: :question_body%>
  </p><br>
  
   <p>
    <%= form.label :test_id%>:
    <%= form.collection_select :test_id, Test.all, :id, :title, prompt: true%>
  </p><br>

  <p><%= form.submit %></p>

<%end %>
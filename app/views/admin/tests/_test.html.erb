<tr>
  <td class="align-middle">
    <%= content_tag :span, test.title, class: 'test-title', data: { test_id: test.id} %>

      <%= render 'form_inline', test: test == @test ? @test : test %>
    </td>
  <td class="align-middle"><%= test.level%></td>
  <td class="align-middle"><%= test.questions.count%></td>
  <td class="align-middle"><%= link_to t('admin.tests.index.show'), admin_test_path(test) %></td>
  <td class="align-middle">
    <%= link_to t('admin.tests.index.edit'), 
                edit_admin_test_path(test), 
                data: { test_id: test.id },
                class: 'form-inline-link' %>
    </td>
  <td class="align-middle">
    <%= link_to t('admin.tests.index.delete'), admin_test_path(test),
                            method: :delete,
                            data: { confirm: t('admin.tests.index.sure') }%>
                              
  </td>
</tr>
<%= javascript_pack_tag 'utilities/form_inline.js' %>
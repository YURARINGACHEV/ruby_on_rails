<%= form_with model: [:admin, @badge], local: true do |form|%>
 <%= render 'shared/errors', resource: @badge %>
  <p>
    <%= form.label :title %><br>
    <%= form.text_field :title, id: :badge_body %>
  </p><br>
  <p>
    <%= form.label :image_url%><br>
    <%= form.text_field :image_url, id: :badge_image_url %>
  </p><br>
  <p>
    <%= form.label :rule%><br>
    <%= form.select :rule, Badge.select_badge, prompt: true %>
  </p><br>

  <p>
    <%= form.label :value%><br>
    <%= form.text_field :value, id: :badge_value %>
  </p><br>
  <p><%= form.submit %>
  <%= link_to 'Back badges', admin_badges_path %>
</p>
<%end %>
